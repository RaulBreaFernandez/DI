<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatalogFragment">

    <!-- Empleamos un ConstraintLayout para el diseño principal de la vista del fragmento.
         Esto se emplea para la gestión de restricciones. -->

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:visibility="visible">

        <!-- Definimos un FrameLayout como "container", que actúa como un contenedor de vista en el
             ConstraintLayout. El FrameLayout se extiende para llenar el espacio disponible. -->

        <Button
            android:id="@+id/navegationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Navegar al detalle"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Dentro del FrameLayout, definimos el botón "navego" al que agregamos lo solicitado
        en la tarea. -->

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
