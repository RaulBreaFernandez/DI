<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">
    
    <TextView
        android:id="@+id/titleTextViewDetailActivityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="115dp"
        android:text="Título"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardViewDetailActivity"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewDetailActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100dp"
        android:elevation="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextViewDetailActivityTitle"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/imageViewDetailActivity"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewDetailActivityDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Descripción"
        android:textSize="16dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="100dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@id/cardViewDetailActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/cardViewDetailActivity"
        app:layout_constraintBottom_toTopOf="@id/buttonDetailActivityLike"/>

    <Button
        android:id="@+id/buttonDetailActivityLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="60dp"
        android:text="Me gusta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/cardViewDetailActivity"/>

</androidx.constraintlayout.widget.ConstraintLayout>